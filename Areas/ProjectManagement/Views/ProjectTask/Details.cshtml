@using Microsoft.AspNetCore.Mvc.TagHelpers
@model COMP2139_ICE.Areas.ProjectManagement.Models.ProjectTask

@{
    ViewData["Title"] = "Task Details";
}

<h2>Task Details</h2>

<div class="card">
    <div class="card-body">
        <div class="card-title">@Model.Title</div>
        <div class="card-text">@Model.Description</div>
        <dl class="row">
            <dt class="col-sm-3">Task ID</dt>
            <dd class="col-sm-9">@Model.ProjectTaskId</dd>

            <dt class="col-sm-3">Project ID</dt>
            <dd class="col-sm-9">@Model.ProjectId</dd>
        </dl>
        <a asp-action="Edit" asp-route-id="@Model.ProjectTaskId" class="btn btn-warning">Edit</a>
        <a asp-action="Index" asp-route-projectId="@Model.ProjectId" class="btn btn-secondary">Back to Task List</a>
    </div>
</div>