@using Microsoft.AspNetCore.Mvc.TagHelpers
@model COMP2139_ICE.Areas.ProjectManagement.Models.Project
@Model Project


@{
    ViewData["Title"] = "Create Project";
    Layout = "_Layout";
}

<h2>Create Project</h2>

<form asp-action="Create" method="post">

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartDate" class="control-label"></label>
        <input asp-for="StartDate" type="date" class="form-control"></input>
    </div>

    <div class="form-group">
        <label asp-for="Status" class="control-label">Status</label>
        <select asp-for="Status" type="date" class="form-control">

            <option value="">Select a Status</option>
            <option value="New">New</option>
            <option value="In Progress">In Progress</option>
            <option value="Complete">Complete</option>

        </select>
    </div>

    <div class="form-group">
        <label asp-for="EndDate" class="control-label"></label>
        <input asp-for="EndDate" type="date" class="form-control"></input>
    </div>

    <!-- Include other forms fields here -->

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary"/>
        <a asp-action="Index" class="btn btn-warning">Cancel</a>
    </div>

</form>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

